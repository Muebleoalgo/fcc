<button 
  class="scroll-to-top-button"
  onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
  aria-label="Subir al inicio"
>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="scroll-icon">
    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 15.75L12 8.25l-7.5 7.5" />
  </svg>
</button>

<script>
  const initScrollToTop = () => {
    const scrollToTopButton = document.querySelector('.scroll-to-top-button') as HTMLButtonElement | null;

    if (scrollToTopButton) {
      const handleScroll = () => {
        if (window.scrollY > 300) {
          scrollToTopButton.style.display = 'flex'; // Muestra el botón
        } else {
          scrollToTopButton.style.display = 'none'; // Oculta el botón
        }
      };

      handleScroll();
      window.addEventListener('scroll', handleScroll);
      return () => window.removeEventListener('scroll', handleScroll);
    }
  };

  document.addEventListener('DOMContentLoaded', initScrollToTop);
  document.addEventListener('astro:page-load', initScrollToTop);
</script>

<style>
  .scroll-to-top-button {
    position: fixed;
    bottom: 20px; /* Ajuste para no superponer el botón de WhatsApp */
    right: 25px;
    background-color: rgba(0, 0, 0, 0.5); /* Fondo con transparencia oscura */
    border-radius: 50%; /* Círculo */
    width: 60px; /* Ajuste al tamaño deseado */
    height: 60px;
    z-index: 1000;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); /* Sombra más suave */
    display: flex; /* Centrar contenido */
    justify-content: center; /* Centrar horizontalmente */
    align-items: center; /* Centrar verticalmente */
    transition: transform 0.3s ease-in-out, background-color 0.3s ease-in-out;
    border: 1px solid rgba(255, 255, 255, 0.2); /* Borde sutil */
  }

  .scroll-to-top-button:hover {
    transform: scale(1.1);
    background-color: rgba(0, 0, 0, 0.7); /* Fondo más oscuro al pasar el mouse */
  }

  .scroll-icon {
    stroke: white; /* Color de la línea del ícono */
    width: 28px; /* Tamaño del ícono */
    height: 28px;
  }

</style>
