---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'FCC: Fundación Comunitaria Cajamarca',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Quiénes somos',
        href: '#features',
        target: '_self',
      },
      { text: 'Conoce más', href: '#features' },
    ]}
    image={{ src: '/src/assets/images/logo-fcc.png', alt: 'Logo Fundación Comunitaria Cajamarca' }}
  >
    <Fragment slot="title">
      Fundación Comunitaria Cajamarca
      <span class="text-accent dark:text-white highlight"> Comprometidos con el bienestar comunitario</span>
    </Fragment>

    <Fragment slot="subtitle">
      Promovemos prácticas sostenibles para mejorar la calidad de vida de las comunidades de Cajamarca, abordando el acceso a la educación, salud, vivienda y más.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->
  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Nuestros Valores"
    title="Lo que impulsa nuestro trabajo"
    subtitle="La Fundación Comunitaria Cajamarca trabaja bajo estos principios fundamentales para el desarrollo de nuestras comunidades."
    items={[
      {
        title: 'Transparencia',
        description: 'Nos aseguramos de que todos los procesos sean claros y accesibles, manteniendo la confianza de nuestros aliados y donantes.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Sostenibilidad',
        description: 'Nos enfocamos en proyectos que puedan generar cambios duraderos y que respeten el medio ambiente y los recursos locales.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Alianzas Estratégicas',
        description: 'Colaboramos con organizaciones locales e internacionales para maximizar el impacto de nuestros proyectos.',
        icon: 'tabler:users',
      },
      {
        title: 'Compromiso Comunitario',
        description: 'Trabajamos directamente con las comunidades para entender y atender sus necesidades más urgentes.',
        icon: 'tabler:user-plus',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Proyectos Destacados"
    title="Nuestros esfuerzos en acción"
    items={[
      {
        title: 'Maratón por los sueños',
        description: 'Un evento que reunió a la comunidad para apoyar proyectos educativos, recaudando fondos para la Escuela Jesús Trabajador.',
      },
      {
        title: 'Talleres para organizaciones de la sociedad civil',
        description: 'Capacitando a organizaciones locales para mejorar su gestión y sostenibilidad. Próximo taller: "Estrategias de articulación interinstitucional" en el Hotel Sol de Belén, 9 de octubre.',
      },
    ]}
    image={{
      src: '/src/assets/images/proyectos-fcc.jpg',
      alt: 'Proyectos comunitarios en Cajamarca',
    }}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Proyectos Completados', amount: '2' },
      { title: 'Recursos Movilizados (S/)', amount: '5K' },
      { title: 'Personas Impactadas', amount: '+ 300' },
      { title: 'Donantes', amount: '+ 10' },
      { title: 'Actores Aliados', amount: '+ 10' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Haz una donación',
        href: '/donaciones/donaciones',
        target: '_self',
        icon: 'tabler:heart',
      },
      {
        text: 'Únete a nuestra red de voluntarios',
        href: '/voluntarios/voluntarios',
      },
    ]}
  >
    <Fragment slot="title">
      ¡Súmate a nuestra causa!
    </Fragment>

    <Fragment slot="subtitle">
      Apóyanos para continuar mejorando las condiciones de vida de las comunidades de Cajamarca.
    </Fragment>
  </CallToAction>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Preguntas Frecuentes"
    subtitle="Resuelve tus dudas sobre cómo puedes ayudar o participar en nuestra misión."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: '¿Cómo puedo donar?',
        description:
          'Puedes donar de manera directa a través de nuestra página de donaciones, eligiendo un proyecto específico o haciendo una donación general.',
      },
      {
        title: '¿Cómo me uno a la red de voluntarios?',
        description:
          'Puedes unirte a nuestra red de voluntarios llenando el formulario en la página de voluntarios. Te contactaremos para coordinar actividades.',
      },
      {
        title: '¿Cómo puedo proponer un proyecto comunitario?',
        description:
          'Estamos abiertos a recibir propuestas que beneficien a las comunidades de Cajamarca. Puedes contactarnos directamente a través del formulario de contacto.',
      },
    ]}
  />
</Layout>
